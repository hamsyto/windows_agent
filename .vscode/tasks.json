{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe сборка активного файла",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/compiled/${fileBasenameNoExtension}.exe",
                "-lws2_32",
            ],
            "options": {
                "cwd": "C:/msys64/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        },
        //компиляция Windows
        {
            "label": "Build Windows with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                //статическая линковка стандартной библиотеки
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                // Библиотеки
                "-Ilibs/lz4",
                "-Ilibs/json",
                // Архивирование
                "libs\\lz4\\lz4.c",
                "libs\\lz4\\lz4hc.c",
                "libs\\lz4\\lz4frame.c",
                "libs\\lz4\\xxhash.c",
                // Шифрование
                // "",
                "-DWIN32_LEAN_AND_MEAN",
                "-D_WIN32_WINNT=0x0A00",
                "-DWINVER=0x0A00",
                "-fdiagnostics-color=always",
                // "-O2", // релиз
                "-g",
                "src\\main.cpp",
                // Transport
                "src\\transport\\transport.cpp",
                // Models
                "src\\models\\message.cpp",
                "src\\models\\settings.cpp",
                // Scenario
                "src\\scenarios\\scenarios.cpp",
                "src\\scenarios\\tests.cpp",
                // Collector
                "src\\collector\\windows\\collector.cpp",
                "src\\collector\\windows\\helpers.cpp",
                // Connection
                "src\\connection\\windows\\connection.cpp",
                // Оптимизации
                "-lnetapi32",
                "-lsetupapi",
                "-lole32",
                "-loleaut32",
                "-lwbemuuid",
                "-liphlpapi",
                //
                "-lbCrypt",
                // OpenSSL
                "-lssl",
                "-lcrypto",
                "-lcrypt32",
                "-lwsock32",
                "-lgdi32",
                "-lws2_32", // Должно быть после OpenSSL :)
                // Output
                "-o",
                "compiled\\main.exe",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        },
        //компиляция Linux
        {
            "label": "Build Linux with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                //статическая линковка стандартной библиотеки
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        }
    ],
    "version": "2.0.0"
}