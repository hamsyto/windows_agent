{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe сборка активного файла",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/compiled/${fileBasenameNoExtension}.exe",
                "-lws2_32",
            ],
            "options": {
                "cwd": "C:/msys64/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        },
        //компиляция всех cpp программы
        {
            "label": "Build with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                //статическая линковка стандартной библиотеки
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                //
                "-DWIN32_LEAN_AND_MEAN",
                "-D_WIN32_WINNT=0x0A00",
                "-DWINVER=0x0A00",
                "-fdiagnostics-color=always",
                // "-O2", // релиз
                "-g",
                "main.cpp",
                "commands_main.cpp",
                "collector\\collectorr.cpp",
                "collector\\commands_coll.cpp",
                "transport\\transport.cpp",
                "models\\connection.cpp",
                "-o",
                "compiled\\main.exe",
                "-lws2_32",
                "-lnetapi32",
                "-lole32",
                "-loleaut32",
                "-lwbemuuid",
                "-liphlpapi",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        }
    ],
    "version": "2.0.0"
}